@model IEnumerable<BUS.Models.Bus>

@{
    ViewBag.Title = "Bus Management";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Bus Management</h2>

    <p class="text-center">
        @Html.ActionLink("Create New Bus", "Create", null, new { @class = "btn btn-primary" })
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().BUS_NUMBER)</th>
                    <th>@Html.DisplayNameFor(model => model.First().CAPACITY)</th>
                    <th>@Html.DisplayNameFor(model => model.First().ROUTE_ID)</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.BUS_NUMBER)</td>
                        <td>@Html.DisplayFor(modelItem => item.CAPACITY)</td>
                        <td>@Html.DisplayFor(modelItem => item.ROUTE_ID)</td>
                        <td class="text-center">
                            @Html.ActionLink("Edit", "Edit", new { id = item.BUS_ID }, new { @class = "btn btn-warning btn-sm" }) |
                           
                            @Html.ActionLink("Delete", "Delete", new { id = item.BUS_ID }, new { @class = "btn btn-danger btn-sm" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
 

    h2 {
        color: #333;
    }

    .table {
        margin-top: 20px;
        font-size: 16px;
    }

    .thead-dark {
        background-color: #343a40;
        color: white;
    }

    .btn-primary {
        margin-bottom: 15px;
    }

    .btn-sm {
        padding: 5px 10px; /* Smaller button padding */
    }

    .text-center {
        text-align: center;
    }

    .table-responsive {
        overflow-x: auto; /* Enables horizontal scrolling for smaller screens */
    }
</style>
