@model BUS.Models.Route

@{
    ViewBag.Title = "Edit Route";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center">Edit Route</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal shadow p-4 bg-white rounded" style="max-width: 600px; margin: auto;">
            <h4>Route Information</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ROUTE_ID)

            <div class="form-group row">
                @Html.LabelFor(model => model.START_LOCATION, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.START_LOCATION, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.START_LOCATION, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.END_LOCATION, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.END_LOCATION, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.END_LOCATION, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.DISTANCE, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.DISTANCE, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DISTANCE, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row text-center">
                <div class="col-md-12">
                    <input type="submit" value="Save" class="btn btn-success btn-lg" style="width: 100%;" />
                </div>
            </div>
        </div>
    }
</div>

<div class="text-center mt-3">
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-link" })
</div>

<style>
    body {
        background-color: #f8f9fa; /* Light background for contrast */
    }

    h2 {
        color: #333; /* Dark text color */
    }

    .form-horizontal {
        margin-top: 20px;
        border-radius: 0.5rem; /* Rounded corners */
    }

    .form-group {
        margin-bottom: 15px; /* Consistent space between form groups */
    }

    .btn-success {
        margin-top: 10px; /* Adds space above the button */
    }

    .text-center {
        margin-top: 20px; /* Space above the back link */
    }
</style>
