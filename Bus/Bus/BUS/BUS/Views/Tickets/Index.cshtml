@model IEnumerable<BUS.Models.Ticket>

@{
    ViewBag.Title = "Ticket Management";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Ticket Management</h2>

    <p class="text-center">
        @Html.ActionLink("Create New Ticket", "Create", null, new { @class = "btn btn-primary" })
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().C_ID)</th>
                    <th>@Html.DisplayNameFor(model => model.First().BUS_ID)</th>
                    <th>@Html.DisplayNameFor(model => model.First().SEAT_NUMBER)</th>
                    <th>@Html.DisplayNameFor(model => model.First().JOURNEY_DATE)</th>
                    <th>@Html.DisplayNameFor(model => model.First().PRICE)</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.C_ID)</td>
                        <td>@Html.DisplayFor(modelItem => item.BUS_ID)</td>
                        <td>@Html.DisplayFor(modelItem => item.SEAT_NUMBER)</td>
                        <td>@Html.DisplayFor(modelItem => item.JOURNEY_DATE)</td>
                        <td>@Html.DisplayFor(modelItem => item.PRICE)</td>
                        <td class="text-center">
                            @{ Session["p"] = "0"; }
                            @Html.ActionLink("Edit", "Edit", new { id = item.TICKET_ID }, new { @class = "btn btn-warning btn-sm" }) |
                           
                            @Html.ActionLink("Delete", "Delete", new { id = item.TICKET_ID }, new { @class = "btn btn-danger btn-sm" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>

    h2 {
        color: #333;
    }

    .table {
        margin-top: 20px;
        font-size: 16px;
    }

    .thead-dark {
        background-color: #343a40;
        color: white;
    }

    .btn-primary {
        margin-bottom: 15px;
    }

    .btn-sm {
        padding: 5px 10px; /* Smaller button padding */
    }

    .text-center {
        text-align: center;
    }

    .table-responsive {
        overflow-x: auto; /* Enables horizontal scrolling for smaller screens */
    }
</style>
