@model IEnumerable<BUS.Models.Payment>

@{
    ViewBag.Title = "Payment Management";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Payment Management</h2>



    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().TICKET_ID)</th>
                    <th>@Html.DisplayNameFor(model => model.First().PAYMENT_DATE)</th>
                    <th>@Html.DisplayNameFor(model => model.First().PAYMENT_METHOD)</th>
                    <th>@Html.DisplayNameFor(model => model.First().AMOUNT)</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.TICKET_ID)</td>
                        <td>@Html.DisplayFor(modelItem => item.PAYMENT_DATE)</td>
                        <td>@Html.DisplayFor(modelItem => item.PAYMENT_METHOD)</td>
                        <td>@Html.DisplayFor(modelItem => item.AMOUNT)</td>
                        <td class="text-center">
                            @Html.ActionLink("Edit", "Edit", new { id = item.PAYMENT_ID }, new { @class = "btn btn-warning btn-sm" }) |
                         
                            @Html.ActionLink("Delete", "Delete", new { id = item.PAYMENT_ID }, new { @class = "btn btn-danger btn-sm" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>


    h2 {
        color: #333;
    }

    .table {
        margin-top: 20px;
        font-size: 16px;
    }

    .thead-dark {
        background-color: #343a40;
        color: white;
    }

    .btn-primary {
        margin-bottom: 15px;
    }

    .btn-sm {
        padding: 5px 10px; /* Smaller button padding */
    }

    .text-center {
        text-align: center;
    }

    .table-responsive {
        overflow-x: auto; /* Enables horizontal scrolling for smaller screens */
    }
</style>
