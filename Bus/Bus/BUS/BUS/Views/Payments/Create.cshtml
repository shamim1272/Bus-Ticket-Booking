@model BUS.Models.Payment

@{
    ViewBag.Title = "Create";
    ViewBag.id = Session["Ticket_id"];
    Layout = "~/Views/Shared/Customer.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal payment-box" style="padding:50px;">
        <h4 style="text-align:center;">Payment</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.AMOUNT, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <p>Ticket Price is 50TK </p>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PAYMENT_METHOD, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.PAYMENT_METHOD, new SelectList(new List<string> { "bKash", "Nagad",  "Visa/Master Card" }), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PAYMENT_METHOD, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="text-align:center;">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>

</div>

