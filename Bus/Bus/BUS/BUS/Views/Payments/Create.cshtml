    .payment-box {
        margin: 0 auto;
        max-width: 500px;
        padding: 20px;
        background-color: #f9f9f9;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
    }

    .text-center {
        text-align: center;
    }
    .form-group{
        padding:20px;
    }
</style>
